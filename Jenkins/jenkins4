pipeline {
    agent any

    stages {
        stage("Create Secret") {
            steps {
                ansiblePlaybook credentialsId: 'Ansible',
                                 disableHostKeyChecking: true,
                                 installation: 'Ansible',
                                 inventory: 'dev.inv',
                                 playbook: 'playbook/postgres-secret.yml'
            }
        }
    }
}
