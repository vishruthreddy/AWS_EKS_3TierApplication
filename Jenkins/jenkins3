pipeline {
    agent any

    stages {
        stage("Apply Role Bindings") {
            steps {
                ansiblePlaybook credentialsId: 'Ansible',
                                 disableHostKeyChecking: true,
                                 installation: 'Ansible',
                                 inventory: 'dev.inv',
                                 extraVars: [limit: 'n1'],
                                 playbook: 'playbook/complete-setup.yml'
            }
        }
    }
}
